<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    tools:context="com.j4velin.pedometer.PEDOMETER.ui.Fragment_Overview">


    <org.eazegraph.lib.charts.PieChart
        android:id="@+id/graph"
        android:layout_width="wrap_content"
        android:layout_height="301dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="115dp"
        app:egHighlightStrength="1"
        app:egInnerPadding="92"
        app:egLegendHeight="0dp" />

    <Chronometer
        android:id="@+id/chronometer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="210dp"
        android:gravity="center"
        android:text="0"
        android:textColor="#F99E2B"
        android:textFontWeight="700"
        android:textSize="50dp" />

    <TextView
        android:id="@+id/steps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="295dp"
        android:gravity="center"
        android:text="0"
        android:textSize="45sp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/chronometer"
        android:layout_centerHorizontal="true"
        android:text="km"
        android:textSize="20sp" />


<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Run tracker is not active"
    android:layout_below="@+id/graph"
    android:fontFamily="@font/sf"
    android:textColor="#8C8C8C"
    android:layout_centerHorizontal="true"
    android:layout_margin="18dp"
    android:textSize="15dp"
    android:id="@+id/text_active"
    />

    <Button
        android:id="@+id/stopbtn"
        android:layout_width="220dp"
        android:layout_height="56dp"
        android:layout_below="@+id/text_active"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/round_button"
        android:fontFamily="@font/sfmedium"
        android:text="Stop and retry"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:elevation="2dp"
        android:translationZ="2dp"
        android:stateListAnimator="@null"
        android:textFontWeight="700"
        android:textSize="30dp"
        android:visibility="gone" />

    <Button
        android:id="@+id/startstop"
        android:layout_width="220dp"
        android:layout_height="56dp"
        android:layout_below="@+id/text_active"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/round_button"
        android:fontFamily="@font/sfmedium"
        android:text="Start Run"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:elevation="2dp"
        android:translationZ="2dp"
        android:stateListAnimator="@null"
        android:textFontWeight="700"
        android:textSize="30dp" />


    <View
        android:id="@+id/separator"
        android:layout_width="272dp"
        android:layout_height="2dip"
        android:layout_below="@id/text_active"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="86dp"
        android:layout_marginRight="60dp"
        android:background="#D6D6D6" />

    <TextView
        android:id="@+id/rule_booklet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/separator"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/sfmedium"
        android:text="Rule Booklet"
        android:textColor="#000000"
        android:textSize="22sp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="34dp"
        android:layout_height="76dp"
        android:layout_margin="20dp"
        android:background="@drawable/prithvi"
        android:contentDescription="@string/todo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="30dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/test"
            app:civ_border_color="#FF000000"
            app:civ_border_width="1dp" />

        <TextView
            android:id="@+id/username"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:text="username"
            android:textColor="#000"
            android:textStyle="bold" />
    </LinearLayout>

    <Button
        android:id="@+id/share"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:background="@drawable/round_button"
        android:text="@string/share"
        android:textColor="#FFFFFF"
        android:textFontWeight="700"
        android:textSize="30dp"
        android:visibility="invisible" />
    `
</RelativeLayout>

